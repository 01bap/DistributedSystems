{
  "name": "SvelteKit + Gin Dev Container",
  "dockerComposeFile": "docker-compose.yml",
  "service": "workspace",
  "workspaceFolder": "/workspace",
  
  "extensions": [
    "esbenp.prettier-vscode",  // Prettier für automatische Code-Formatierung
    "golang.go",  // VS Code Extension für Go-Entwicklung
    "svelte.svelte-vscode",  // VS Code Extension für Svelte-Entwicklung
    "bradlc.vscode-tailwindcss",  // Tailwind CSS IntelliSense für bessere Autovervollständigung
    "daisyui.daisyui"  // DaisyUI für vorgefertigte UI-Komponenten in Tailwind CSS
  ],
  
  "settings": {
    "editor.formatOnSave": true,  // Automatische Formatierung beim Speichern aktivieren
    "terminal.integrated.defaultProfile.linux": "bash"  // Standard-Shell im Terminal auf Bash setzen
  },
  
  "postCreateCommand": "echo 'Starte Post-Installationsschritte...' && npm install && echo 'SvelteKit Abhängigkeiten installiert' && go mod tidy && echo 'Go Abhängigkeiten bereinigt' && echo 'Post-Installationsprozess abgeschlossen'"
}

