{
  "name": "SvelteKit + Gin Dev Container",

  "dockerComposeFile": "docker-compose.yml",
  "service": "dev",
  "workspaceFolder": "/workspaces/DistributedSystems",
  "containerEnv": {
    "DB_HOST": "db",
    "DB_PORT": "5432",
    "DB_USER": "postgres",
    "DB_PASSWORD": "postgres",
    "DB_NAME": "shoppingdb",
    "SERVER_PORT": "8080",
    "VITE_PUBLIC_BACKEND_URL": "https://congenial-chainsaw-qgpqwjwrqpvh94w4-8080.app.github.dev"
  },
  "mounts": ["source=kind-vol,target=/var/lib/kubevols,type=volume"],

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "golang.go",
        "svelte.svelte-vscode",
        "ms-azuretools.vscode-docker",
        "ms-vscode.vscode-typescript-next",
        "github.vscode-github-actions"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },

  "forwardPorts": [5173,3000,3001,8080],
  "portsAttributes": {
    "5173": {
      "label": "Frontend dev (Svelte)",
      "onAutoForward": "openBrowser"
    },
    "3000": {
      "label": "Frontend kubernetes (Svelte)",
      "onAutoForward": "openBrowser"
    },
    "3001": {
      "label": "Frontend docker (Svelte)",
      "onAutoForward": "openBrowser"
    },
    "8080": {
      "label": "Backend (Gin)",
      "onAutoForward": "notify"
    }
  },
  
  "postCreateCommand": "go install sigs.k8s.io/kind@v0.29.0 && kind create cluster && cd frontend && npm install && echo \"VITE_PUBLIC_BACKEND_URL=$VITE_PUBLIC_BACKEND_URL\" > .env && cd ../backend && go mod tidy && echo 'Post-Installationsprozess abgeschlossen'",
  
  "remoteUser": "root"
}
