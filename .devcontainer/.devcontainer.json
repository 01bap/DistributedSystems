{
  "name": "SvelteKit + Gin Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,  // Automatische Formatierung beim Speichern aktivieren
        "terminal.integrated.defaultProfile.linux": "bash"  // Standard-Shell im Terminal auf Bash setzen
      }
    },
    "extensions": [
      "golang.go",
      "svelte.svelte-vscode"
    ]
  },

  "postCreateCommand": "npm install ./frontend/ && go mod tidy ./backend/ && echo 'Post-Installationsprozess abgeschlossen'",

  "forwardPorts": [5173],
  "portsAttributes": {
    "5173": {
      "label": "Frontend (Svelte)",
      "onAutoForward": "notify"
    }
  },
  
  "remoteUser": "root"
}

